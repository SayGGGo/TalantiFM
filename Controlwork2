# –°–∞–π–≥–∏–Ω –ê–Ω–¥—Ä–µ–π –ï–≤–≥–µ–Ω—å–µ–≤–∏—á
# –£—Ä–æ–≤–µ–Ω—å: B
# 27 09 2025

from time import sleep
from random import randint


def good_animations(string, speed=0.1, effect=False):
    text = ""
    for i in string:
        text += i
        if effect:
            print("\n" * 100)
            print(text)
            sleep(speed)
        else:
            print(string)
            break


def translate_data(kb):
    print(f"| –ú–µ–≥–∞–±–∞–π—Ç—ã: {kb * 0.001}")
    print(f"| –ë–∏—Ç—ã: {kb * 8000}")
    print(f"| –ë–∞–π—Ç—ã: {kb * 1000}")


def task1():
    print(f"| 1000 –±–∏—Ç -> {1000 / 8e+12} —Ç–µ—Ä–∞–±–∞–π—Ç üòÆ")
    print(f"| 1000 –±–∏—Ç -> {1000 / 8e+2} –≥–∏–≥–∞–±–∞–π—Ç üòØ")
    print(f"| 1000 –±–∏—Ç -> {1000 / 8e+6} –º–µ–≥–∞–±–∞–π—Ç ü§®")
    print(f"| 1000 –±–∏—Ç -> {1000 / 8000} –∫–∏–ª–æ–±–∞–π—Ç üòí")


def task2():
    # –ò—Å–ø–æ–ª—å–∑—É—é —Ñ—É–Ω–∫—Ü–∏—é –∏–∑ –ø—Ä–æ—à–ª–æ–π –∫–æ–Ω—Ç—Ä–æ–ª—å–Ω–æ–π
    translate_data(60 * 1000 * 2)


def task3():
    temperature = int(input("–í–≤–µ–¥–∏—Ç–µ —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä—É: "))
    if temperature < -20:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –°–Ω–µ–≥")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ú–æ–∂–Ω–æ, –µ—Å–ª–∏ –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ. –ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É, –Ω–µ –∑–∞–±—É–¥—å –ø–µ—Ä—á–∞—Ç–∫–∏!", effect=True)
        else:
            good_animations("–î–æ–º–∞ —Å–∏–¥–∏!")
    elif temperature < -10:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –°–Ω–µ–≥")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É, –ø–µ—Ä—á–∞—Ç–∫–∏", effect=True)
        else:
            good_animations("–ú–æ–∂–Ω–æ, –µ—Å–ª–∏ –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ. –ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É, –Ω–µ –∑–∞–±—É–¥—å –ø–µ—Ä—á–∞—Ç–∫–∏!", effect=True)
    elif temperature < 0:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –°–Ω–µ–≥")
        good_animations("3. –î–æ–∂–¥—å")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, –∫—Ä–æ—Å–æ–≤–∫–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É, –º–æ–∂–Ω–æ –ø–µ—Ä—á–∞—Ç–∫–∏", effect=True)
        else:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É, –ø–µ—Ä—á–∞—Ç–∫–∏", effect=True)
    elif temperature < 10:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –î–æ–∂–¥—å")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É/–∫–æ—Ñ—Ç—É, –∫—Ä–æ—Å–æ–≤–∫–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É", effect=True)
        else:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É", effect=True)
    elif temperature < 20:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –î–æ–∂–¥—å")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ù–∞–¥–µ–Ω—å –∫–æ—Ñ—Ç—É, –∫—Ä–æ—Å–æ–≤–∫–∏, —à—Ç–∞–Ω—ã, –∫–µ–ø–∫—É", effect=True)
        else:
            good_animations("–ù–∞–¥–µ–Ω—å –∫—É—Ä—Ç–∫—É, —Å–∞–ø–æ–≥–∏, —à—Ç–∞–Ω—ã, —à–∞–ø–∫—É/–∫–µ–ø–∫—É", effect=True)
    elif temperature < 30:
        good_animations("–¢–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–≥–æ–¥—É:", 0.05)
        good_animations("1. –°–æ–ª–Ω–µ—á–Ω–æ")
        good_animations("2. –î–æ–∂–¥—å")
        weather = int(input("\n–ü–∏—Å–∞—Ç—å —Ü–∏—Ñ—Ä—É —Å—é–¥–∞:"))
        if weather == 1:
            good_animations("–ù–∞–¥–µ–Ω—å —Ñ—É—Ç–±–æ–ª–∫—É, —Å–∞–Ω–¥–∞–ª–∏, —à–æ—Ä—Ç—ã, –∫–µ–ø–∫—É", effect=True)
        else:
            good_animations("–ù–∞–¥–µ–Ω—å –≤–µ—Ç—Ä–æ–≤–∫—É, –∫—Ä–æ—Å–æ–≤–∫–∏/—Å–∞–ø–æ–≥–∏, —à–æ—Ä—Ç—ã/—à—Ç–∞–Ω—ã, –∫–µ–ø–∫—É", effect=True)
    else:
        good_animations("–ù–∞–¥–µ–Ω—å —Ñ—É—Ç–±–æ–ª–∫—É, —Å–∞–Ω–¥–∞–ª–∏, —à–æ—Ä—Ç—ã, –∫–µ–ø–∫—É", effect=True)


print("–ö–æ–Ω—Ç—Ä–æ–ª—å–Ω–∞—è —Ä–∞–±–æ—Ç–∞ 2. 27.09.2025")
for time in range(30):
    print("\n" * 50)
    print(f"–¢–∞–ª–∞–Ω—Ç—ã –§–ú / –ö–æ–Ω—Ç—Ä–æ–ª—å–Ω–∞—è —Ä–∞–±–æ—Ç–∞ 2")
    print(("‚óº" * time) + ("‚óºÔ∏è" * (30 - time)))
    sleep(randint(1, 3) / 100)

print("\n" * 15)

good_animations("--- –ó–∞–¥–∞—á–∞ 1 ----------\n", effect=True)
task1()
sleep(5)
good_animations("--- –ó–∞–¥–∞—á–∞ 2 ----------\n", effect=True)
task2()
sleep(5)
good_animations("--- –ó–∞–¥–∞—á–∞ 3 ----------\n", effect=True)
good_animations("–í–≤–µ–¥–∏—Ç–µ —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä—É:", 0.05, effect=True)
print("\n" * 50)
task3()
sleep(5)
print("\n" * 5)
good_animations("–°–ø–∞—Å–∏–±–æ –∑–∞ –∑–∞–ø—É—Å–∫!\n–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –º–æ–∂–Ω–æ –±–∞–ª–ª –ø–æ–±–æ–ª—å—à–µ)\n–°–∞–π–≥–∏–Ω –ê–Ω–¥—Ä–µ–π –ò–ò-71", 0.05, effect=True)
